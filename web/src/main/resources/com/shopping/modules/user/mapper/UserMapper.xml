<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shopping.modules.user.mapper.UserMapper">
    <select id="findByAccount" resultType="com.shopping.modules.user.entity.UserEntity">
        select id, user_account, user_password,user_role from user
        <where>
            <if test="userAccount != null and userAccount!=''">
                and user_account like concat('%', #{userAccount},'%')
            </if>
        </where>
    </select>
</mapper>